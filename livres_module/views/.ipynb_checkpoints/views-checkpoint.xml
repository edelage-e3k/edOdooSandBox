<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="livres_module.list">
      <field name="name">livres_module list</field>
      <field name="model">livres_module.livres_module</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="livres_module.action_window">
      <field name="name">livres_module window</field>
      <field name="res_model">livres_module.livres_module</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="livres_module.action_server">
      <field name="name">livres_module server</field>
      <field name="model_id" ref="model_livres_module_livres_module"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->
    
    <menuitem name="livres_module" id="livres_module.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="livres_module.menu_1" parent="livres_module.menu_root"/>
    <menuitem name="Menu 2" id="livres_module.menu_2" parent="livres_module.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="livres_module.menu_1_list" parent="livres_module.menu_1"
              action="livres_module.action_window"/>
    <menuitem name="Server to list" id="livres_module" parent="livres_module.menu_2"
              action="livres_module.action_server"/>

  </data>
</odoo>